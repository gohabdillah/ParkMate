# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (use 'postgres' for Docker, 'localhost' for local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parkmate_db
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Configuration (use 'redis' for Docker, 'localhost' for local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
CARPARK_API_URL=https://api.data.gov.sg/v1/transport/carpark-availability
CARPARK_API_KEY=

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@parkmate.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
